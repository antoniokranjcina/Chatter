<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/transitionFragment">
    <fragment
        android:id="@+id/transitionFragment"
        android:name="com.ak.chatter.ui.splash.TransitionFragment"
        android:label="fragment_transition"
        tools:layout="@layout/fragment_transition">
        <action
            android:id="@+id/action_transitionFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ak.chatter.ui.auth.fragments.login.LoginFragment"
        android:label="Name"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_nameFragment"
            app:destination="@id/nameFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/nameFragment"
        android:name="com.ak.chatter.ui.auth.fragments.register.NameFragment"
        android:label="Name"
        tools:layout="@layout/fragment_name">
        <action
            android:id="@+id/action_nameFragment_to_birthdayFragment"
            app:destination="@id/birthdayFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/birthdayFragment"
        android:name="com.ak.chatter.ui.auth.fragments.register.BirthdayFragment"
        android:label="Birthday"
        tools:layout="@layout/fragment_birthday">
        <action
            android:id="@+id/action_birthdayFragment_to_genderFragment"
            app:destination="@id/genderFragment"
            app:popUpToInclusive="false" />
        <argument
            android:name="firstName"
            app:argType="string" />
        <argument
            android:name="lastName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/genderFragment"
        android:name="com.ak.chatter.ui.auth.fragments.register.GenderFragment"
        android:label="Gender"
        tools:layout="@layout/fragment_gender">
        <action
            android:id="@+id/action_genderFragment_to_emailFragment"
            app:destination="@id/emailFragment"
            app:popUpToInclusive="false" />
        <argument
            android:name="firstName"
            app:argType="string" />
        <argument
            android:name="lastName"
            app:argType="string" />
        <argument
            android:name="birthday"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/emailFragment"
        android:name="com.ak.chatter.ui.auth.fragments.register.EmailFragment"
        android:label="Email"
        tools:layout="@layout/fragment_email">
        <action
            android:id="@+id/action_emailFragment_to_passwordFragment"
            app:destination="@id/passwordFragment"
            app:popUpToInclusive="false" />
        <argument
            android:name="firstName"
            app:argType="string" />
        <argument android:name="birthday" />
        <argument
            android:name="lastName"
            app:argType="string" />
        <argument
            android:name="gender"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/passwordFragment"
        android:name="com.ak.chatter.ui.auth.fragments.register.PasswordFragment"
        android:label="Password"
        tools:layout="@layout/fragment_password">
        <argument
            android:name="firstName"
            app:argType="string" />
        <argument
            android:name="lastName"
            app:argType="string" />
        <argument
            android:name="birthday"
            app:argType="string" />
        <argument
            android:name="gender"
            app:argType="string" />
        <argument
            android:name="email"
            app:argType="string" />
    </fragment>

</navigation>